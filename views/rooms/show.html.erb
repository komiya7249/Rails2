<div class="detail_body">

  <div class="detail_box">
    <div class="link_box">
      <%= link_to"←戻る",:back%>
      <%= link_to"編集", edit_room_path%>
    </div>
    <div class="detail_info_box">
      <% if @room.img? %>
      <%= image_tag @room.img.thumb.url%>
      <% else %>
      <%= image_tag("default-image.png")%>
      <% end %>
      <div class="detail_info_container">
        <p><%= @room.name %></p>
        <p><%= @room.introduction%></p>
        <p><%= @room.price %></p>
      </div>
    </div>

    <div class="reserve_box">
      <%= form_with model: @reservation ,url:confirm_reservations_path(@reservation), method: :post do |f| %>
        <div class="show_form_box">
          <div>
            <%= f.label"チェックイン" %><br>
            <%= f.date_field :check_in_at%>
          </div>
          <div>
            <%= f.label"チェックアウト" %><br>
            <%= f.date_field :check_out_at%>
          </div>
          <div>
            <%= f.label"人数"%><br>
            <%= f.text_field :persons,placeholder:'人数'%>
          </div>
        </div>
        <%= f.hidden_field :room_id, value: @room.id%>
        <%= f.hidden_field :user_id, value: @user.id%>
        <%= f.submit"予約する",class:"edit_submit"%>
      <% end %>
    </div>

  </div>

</div>
