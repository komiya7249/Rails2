<div class="new_box">
  <div class="new_form">
    <h2 class="new_title">新規アカウント作成</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
      <p><%= f.label :ユーザーネーム %></p>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class:"new_field"%>
      </div>

      <div class="field">
        <p><%= f.label :メールアドレス %></p>
        <%= f.text_field :email, autofocus: true, autocomplete: "email" ,class:"new_field"%>
      </div>

      <div class="field">
        <p><%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上で入力)</em>
        <% end %><br />
        <%= f.text_field :password, autocomplete: "new-password" ,class:"new_field"%></p>
      </div>

      <div class="field">
        <p><%= f.label :確認用パスワード %></p>
        <%= f.text_field :password_confirmation, autocomplete: "new-password" ,class:"new_field" %>
      </div>

      <div class="actions">
        <%= f.submit "新規アカウント新規登録",class:"new_submit"%>
      </div>
      <%= link_to""%>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
